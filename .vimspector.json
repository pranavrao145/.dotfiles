{
    "configurations": {
        "C++: Launch": {
            "adapter": "vscode-cpptools",
            "configuration": {
                "request": "launch",
                "program": "debug/${fileBasenameNoExtension}", "cwd": "${workspaceRoot}",
                "externalConsole": true,
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        },
        "Python: Current File" : {
            "adapter": "debugpy",
            "configuration": {
                "type": "python",
                "request": "launch",
                "cwd": "${workspaceRoot}",
                "program": "${file}",
                "console": "externalTerminal"
            }
        },
        "Ruby: Current File" : {
            "adapter": "cust_vscode-ruby",
            "configuration": {
                "request": "launch",
                "program": "${file}",
                "args": [ "*${args}" ]
            }
        }
    }
}
